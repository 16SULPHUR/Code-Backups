@*
  This is the Index view for the Home controller. 
  It displays a greeting message based on the time of day 
  and shows an appropriate image.
*@

@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
</head>
<body>
    <header>
        <h1>@ViewBag.Greeting</h1>
    </header>
    <main>
        <img src="@ViewBag.ImagePath" alt="Greeting Image" style="width:100%;max-width:600px;" />
    </main>
    <footer>
        <p>&copy; 2024 Practical3. All rights reserved.</p>
    </footer>
</body>
</html>
